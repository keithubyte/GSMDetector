<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bluedon.gsm.detector.GSMActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/baidu_map_sdk"
            android:gravity="center"
            android:text="@string/baidu_map_sdk"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />
    </FrameLayout>

    <fragment
        android:id="@+id/gsm_data_fragment"
        android:name="com.bluedon.gsm.detector.GSMDataFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.0" />

</LinearLayout>
